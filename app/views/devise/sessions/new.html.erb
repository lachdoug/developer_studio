<h4>Sign in</h4>

<div class="devise-form col-sm-4 col-md-3 col-lg-2">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group form-group-wide-bottom-margin">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group form-group-wide-bottom-margin">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group form-group-wide-bottom-margin">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= button_tag type: :submit, class: 'btn btn-primary' do %><%= icon_text('fa-sign-in', "Sign in") %><% end %>
    </div>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>

</div>
