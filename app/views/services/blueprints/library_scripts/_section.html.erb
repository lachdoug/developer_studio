<% @service.blueprint.library_scripts.each do |library_script| %>

  <div class="blueprint_item_collapse_area">
    <legend>
      <div class="dropdown pull-right">
        <a class="btn btn-custom" data-toggle="dropdown">
          <i class="fa fa-bars"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <%= link_to icon_text('fa-caret-up', 'Move up'),
              "#",
              title: 'Move up',
              id: "service_blueprint_library_script_#{library_script.index}_moveup_button_disabled", remote: true,
              class: "disabled_link",
              style: ( 'display:none;' unless library_script.disable_moveup ) %>
            <%= link_to icon_text('fa-caret-up', 'Move up'),
              service_blueprint_library_script_moveup_path(service_id: @service.name, library_script_id: library_script.index),
              title: 'Move up',
              id: "service_blueprint_library_script_#{library_script.index}_moveup_button", remote: true,
              class: "show_saving_spinner_on_click",
              style: ( 'display:none;' if library_script.disable_moveup ) %>
          </li>
          <li>
            <%= link_to icon_text('fa-trash-o', 'Delete'),
              service_blueprint_library_script_path(service_id: @service.name, id: library_script.index),
              method: :delete, remote: true,
              title: 'Delete',
              class: 'show_saving_spinner_on_confirmed',
              data: {confirm: "Are you sure that you want to delete this library script?"} %>
          </li>
        </ul>
      </div>
      <a class="blueprint_item_collapse" data-toggle="collapse" href="#service_blueprint_library_script_<%= library_script.index %>_form">
          Library script <%= library_script.index + 1 %> -
          <span id="service_blueprint_library_script_section_heading_<%= library_script.index %>">
            <%= library_script.to_s %>
          </span>
      </a>
    </legend>

    <div class="collapse <%= 'in' if library_script.new_record %>" id="service_blueprint_library_script_<%= library_script.index %>_form">
      <%= custom_form_for library_script,
        namespace: "service_blueprint_library_script_#{library_script.index}",
        url: service_blueprint_library_script_path(service_id: @service.name, id: library_script.index) do |f| %>
        <%= f.input :name, required: true %>
        <%= f.input :language, as: :select, input_html: {class: 'ace-editor-language-select'},
        collection: f.object.script_language_collection, include_blank: true, required: false %>
        <%= f.input :content, as: :code, required: false, input_html: { data: { mode: f.object.send(:language) } }  %>
        <%= f.input :sudo, as: :boolean, wrapper: :horizontal_boolean %>
      <% end %>
      <hr>
    </div>
  </div>

<% end %>
<div class='clearfix'>
  <%= link_to icon_text('fa-plus', 'New library script'),
      new_service_blueprint_library_script_path(service_id: @service.name),
      remote: true, class: 'btn btn-custom pull-right' %>
</div>
