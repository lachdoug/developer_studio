<%= custom_form_for @service.blueprint.metadata,
      url: service_blueprint_metadata_path(service_id: @service.name) do |f| %>
<div class="form-section-heading">Blueprint version</div>
<%= f.input :blueprint_version_major, label: 'Major', as: :integer, input_html: { min: 0 } %>
<%= f.input :blueprint_version_minor, label: 'Minor', as: :integer, input_html: { min: 0 } %>
<%= f.input :blueprint_version_level, label: 'Level', as: :select, collection:f.object.blueprint_version_level_select_collection, required: true %>
<%= f.input :blueprint_version_patch, label: 'Patch', as: :integer, input_html: { min: 0 } %>
<div class="form-section-heading">Software display detail</div>
<%= f.input :software_display_title, label: 'Title', hint: 'The full title of the software.' %>
<%= f.input :software_display_label, label: 'Label', hint: 'Short version of the title, used as default display label for an service. Limited to 32 characters.', maxlength: 32 %>
<%= f.input :software_display_version, label: 'Version', hint: 'Software version information. Used for display purposes only.' %>
<%= f.input :software_display_description, label: 'Description', as: :markdown %>
<%= f.input :software_display_url, as: :url, label: 'Website URL'  %>
<div class="form-section-heading">Software license</div>
<%= f.input :software_license_label, label: 'Label' %>
<%= f.input :software_license_url, label: 'Licence URL' %>
<% end %>
