<% @service.blueprint.base.accepts.each do |accept| %>

  <%= custom_form_for accept,
    namespace: "service_blueprint_base_accept_#{accept.index}",
    url: service_blueprint_base_accept_path(service_id: @service.name, id: accept.index) do |f| %>

    <table class="table form_table">
      <tr class="<%= 'hidden_table_header' if accept.index > 0 %>">
        <th></th>
        <th width="1"></th>
      </tr>

      <tr>
        <%= f.input :type, as: :select, collection: f.object.type_collection, include_blank: true, required: false, wrapper: :form_table_cell_input %>
        <td>
          <div class="dropdown">
            <a class="btn btn-custom" data-toggle="dropdown">
              <i class="fa fa-bars"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li>
                <%= link_to icon_text('fa-caret-up', 'Move up'),
                  "#",
                  title: 'Move up',
                  id: "service_blueprint_base_accept_#{accept.index}_moveup_button_disabled", remote: true,
                  class: "disabled_link",
                  style: ( 'display:none;' unless accept.disable_moveup ) %>
                <%= link_to icon_text('fa-caret-up', 'Move up'),
                  service_blueprint_base_accept_moveup_path(service_id: @service.name, accept_id: accept.index),
                  title: 'Move up',
                  id: "service_blueprint_base_accept_#{accept.index}_moveup_button", remote: true,
                  class: "show_saving_spinner_on_click",
                  style: ( 'display:none;' if accept.disable_moveup ) %>
              </li>
              <li>
                <%= link_to icon_text('fa-trash-o', 'Delete'),
                  service_blueprint_base_accept_path(service_id: @service.name, id: accept.index),
                  method: :delete, remote: true,
                  title: 'Delete',
                  class: 'show_saving_spinner_on_confirmed',
                  data: {confirm: "Are you sure that you want to delete this accept?"} %>
                </li>
            </ul>
          </div>
        </td>
      </tr>
    </table>
  <% end %>

<% end %>
<div class='clearfix'>
  <%= link_to icon_text('fa-plus', 'New accept'),
      new_service_blueprint_base_accept_path(service_id: @service.name),
      remote: true, class: 'btn btn-custom pull-right' %>
</div>
