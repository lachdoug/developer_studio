<% params[:controller].split('/').first.tap do |active_nav| %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><%= image_tag 'engines_nut_braces_logo_128.png', class: 'brand-icon pull-left' %> Studio</a>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= :active if active_nav == "apps" %>"><a href="<%= apps_path %>">Apps</a></li>
        <li class="<%= :active if active_nav == "services" %>"><a href="<%= services_path %>">Services</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= :active if ( active_nav == "settings" || active_nav == "dropdowns_configs" || active_nav == "service_definition_publisher_namespaces" ) %>"><a href="<%= settings_path %>"><i class="fa fa-cog"></i></a></li>
        <% if user_signed_in? %>
        <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out"></i><% end %></li>
        <% else %>
        <li class="<%= :active if active_nav == "devise" %>"><a href="<%= new_user_session_path %>"><i class="fa fa-sign-in"></i></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<% end %>
