<%= simple_form_for @app.release_notes,
      url: app_release_notes_path(app_id: @app.name), html: { class: 'autosubmit' }, method: :patch, remote: true do |f| %>
<br>
<%= button_tag icon_text('fa-edit', :edit), class: 'btn btn-default pull-right click-through-button-text' %>
<%= f.input :content, as: :markdown, label: false %>
<% end %>
