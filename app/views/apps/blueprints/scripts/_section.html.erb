<%= custom_form_for @app.blueprint.scripts,
      namespace: "app_blueprint_scripts",
      url: app_blueprint_scripts_path(app_id: @app.name) do |f| %>
<%= f.simple_fields_for :start do |ff| %>
<legend>Start</legend>
<%= ff.input :language, as: :select, input_html: {class: 'ace-editor-language-select'}, collection: f.object.script_language_collection, include_blank: false, required: false %>
<%= ff.input :content, as: :code, required: false, input_html: { data: { mode: ff.object.send(:language) } } %>
<% end %>
