<% @app.blueprint.replacement_strings.each do |replacement_string| %>

  <div class="blueprint_item_collapse_area">
    <legend>
      <div class="dropdown pull-right">
        <a class="btn btn-custom" data-toggle="dropdown">
          <i class="fa fa-bars"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <%= link_to icon_text('fa-caret-up', 'Move up'),
              "#",
              title: 'Move up',
              id: "app_blueprint_replacement_string_#{replacement_string.index}_moveup_button_disabled", remote: true,
              class: "disabled_link",
              style: ( 'display:none;' unless replacement_string.disable_moveup ) %>
            <%= link_to icon_text('fa-caret-up', 'Move up'),
              app_blueprint_replacement_string_moveup_path(app_id: @app.name, replacement_string_id: replacement_string.index),
              title: 'Move up',
              id: "app_blueprint_replacement_string_#{replacement_string.index}_moveup_button", remote: true,
              class: "show_saving_spinner_on_click",
              style: ( 'display:none;' if replacement_string.disable_moveup ) %>
          </li>
          <li>
            <%= link_to icon_text('fa-trash-o', 'Delete'),
              app_blueprint_replacement_string_path(app_id: @app.name, id: replacement_string.index),
              method: :delete, remote: true,
              title: 'Delete',
              class: 'show_saving_spinner_on_confirmed',
              data: {confirm: "Are you sure that you want to delete this replacement string?"} %>
          </li>
        </ul>
      </div>
      <a class="blueprint_item_collapse" data-toggle="collapse" href="#app_blueprint_replacement_string_<%= replacement_string.index %>_form">
          Replacement string <%= replacement_string.index + 1 %> -
          <span id="app_blueprint_replacement_string_<%= replacement_string.index %>_section_heading">
            <%= replacement_string.to_s %>
          </span>
      </a>
    </legend>

    <div class="collapse <%= 'in' if replacement_string.new_record %>" id="app_blueprint_replacement_string_<%= replacement_string.index %>_form">
      <%= custom_form_for replacement_string,
        namespace: "app_blueprint_replacement_string_#{replacement_string.index}",
        url: app_blueprint_replacement_string_path(app_id: @app.name, id: replacement_string.index) do |f| %>
        <%= f.input :string, required: true %>
        <%= f.input :source_file, required: true %>
        <%= f.input :destination_file, required: true %>
      <% end %>
      <hr>
    </div>
  </div>

<% end %>
<div class='clearfix'>
  <%= link_to icon_text('fa-plus', 'New replacement string'),
      new_app_blueprint_replacement_string_path(app_id: @app.name),
      remote: true, class: 'btn btn-custom pull-right' %>
</div>
